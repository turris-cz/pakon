config archive 'archive'
	option keep 4w

# read by levels (0, 1, 2, ...)
# then from up to bottom 
config archive_rule
	option level 0 # level 0 aggregated to level 1 and so on
	option up_to 1d
	option window 60
	option severity * # possible inputs: * | <X | >X | 'X, Y' | X
	option category all # possible inputs: all | 'category_a,category_b,category_c' | category_a

config archive_rule
	option level 1
	option up_to 3d
	option window 900
	option severity >5
	option category all

config archive_rule
	option level 1
	option up_to 5d
	option window 900
	option severity *
	option category all

config archive_rule
	option level 2
	option up_to 7d
	option window 1800
	option severity *
	option category all

config archive_rule
	option level 3
	option up_to 14d
	option window 3600
	option severity *
	option category all
